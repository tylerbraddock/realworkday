<div class="col-10 offset-1 work-index">
  <h2 class="text-center">Explore Workdays</h2>
  <% @workdays.each do |workday| %>
    <div class="content-box">
      <div class="float-left job-title-box">
        <h4><%= workday.job_title %></h4>
      </div>
      <div class="float-right industry-box">
        <h4><%= workday.industry %></h4>
      </div>

      <br class="clear" />

      <p><%= truncate workday.description, length: 450, separator: ' ', omission: '...(continued)' %></p>
    </div>
  <% end %>
</div>
